#!/usr/bin/env ruby

if !ARGV[0]
  puts 'no argument'
  exit 0
end

def write(state)
  file = File.expand_path("../../led.state", __FILE__)
  File.truncate(file, 0)
  File.write(file, state, 0)
end

case ARGV[0]
when 'on', 'off', 'blink' then
  write(ARGV[0])
when 'ping' then
  write("#{ARGV[0]} #{ARGV[1]}")
when 'run' then
  write('blink')
  system(ARGV.drop(1).join(' '))
  write('off')
else
  puts 'invalid argument'
  exit 0
end
exit 1
